generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  email           String            @unique
  name            String
  emailVerified   Boolean           @default(false)
  password        String
  avatar          String            @db.LongText
  hasCurriculum   Boolean           @default(false)
  recoverPassword RecoverPassword[]
  calendarEvents  CalendarEvents[]
  curriculum      Curriculum[]
}

model RecoverPassword {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  user      User     @relation(fields: [userEmail], references: [email])
  userEmail String
  createdAt DateTime @default(now())
}

model Teacher {
  id               Int    @id
  avatar           String
  name             String
  departament_code String
  departament_name String
  email            String
  lattes           String @db.LongText
}

// default course structure
model Course {
  code                                    String       @id
  name                                    String
  period_emergence                        String
  workload_total                          Int
  workload_normal_lessons                 Int
  workload_academic_professional_guidance Int
  workload_optional_lessons               Int
  workload_complementary                  Int
  periods                                 Period[]
  Curriculum                              Curriculum[]
}

model Period {
  id         Int                 @id @default(autoincrement())
  name       String
  course     Course              @relation(fields: [courseCode], references: [code])
  courseCode String
  subjects   SubjectsOnPeriods[]
}

model Subject {
  code          String              @id
  name          String
  time          Int
  periods       SubjectsOnPeriods[]
  usersSubjects UserSubjects[]
}

model SubjectsOnPeriods {
  subject     Subject @relation(fields: [subjectCode], references: [code])
  subjectCode String
  period      Period  @relation(fields: [periodId], references: [id])
  periodId    Int

  @@id([subjectCode, periodId])
}

model CalendarEvents {
  id          Int      @id @default(autoincrement())
  title       String
  start       DateTime
  end         DateTime
  description String   @db.LongText
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

//user course structure
model Curriculum {
  id                     Int                 @id @default(autoincrement())
  user                   User                @relation(fields: [userId], references: [id])
  userId                 Int                 @unique
  course                 Course              @relation(fields: [courseCode], references: [code])
  courseCode             String
  curriculumPeriods      CurriculumPeriods[]
  curriculumPeriodsOrder Json
}

model CurriculumPeriods {
  id           Int            @id @default(autoincrement())
  curriculum   Curriculum     @relation(fields: [curriculumId], references: [id])
  curriculumId Int
  name         String
  subjects     UserSubjects[]
}

model UserSubjects {
  id          Int               @id @default(autoincrement())
  subject     Subject           @relation(fields: [subjectCode], references: [code])
  subjectCode String
  status      String            @default("todo")
  note        String?           @db.LongText
  links       Json?
  evaluations Json?
  grade       Float?
  period      CurriculumPeriods @relation(fields: [periodId], references: [id])
  periodId    Int
}
